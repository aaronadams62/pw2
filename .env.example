# EmailJS (frontend contact form)
REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here
REACT_APP_EMAILJS_TEMPLATE_ID=your_template_id_here
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# API URL (frontend)
REACT_APP_API_URL=http://localhost:4000

# Firebase (Phase 1+: Hosting now, app config used in later Firestore/Auth phases)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_ADMIN_EMAIL=admin@example.com
REACT_APP_ADMIN_EMAILS=admin@example.com

# Google Analytics 4 — leave blank to disable (safe for local dev)
# Get your Measurement ID from https://analytics.google.com → Admin → Data Streams
REACT_APP_GA_MEASUREMENT_ID=

# CORS — comma-separated allowed origins (no trailing slashes)
# Production example: ALLOWED_ORIGINS=https://aaronadams.dev,https://www.aaronadams.dev
ALLOWED_ORIGINS=http://localhost:3000

# JWT — must be a strong random secret, never the default
JWT_SECRET=replace_with_a_strong_random_secret

# Database
DB_USER=postgres
DB_HOST=localhost
DB_NAME=portfolio
DB_PASSWORD=postgres
DB_PORT=5432

# Admin seed — remove or leave blank to skip auto-seeding in production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace_with_a_strong_password

# Cloudflare Tunnel
TUNNEL_TOKEN=paste_your_token_here
