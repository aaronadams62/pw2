# EmailJS (frontend contact form)
REACT_APP_EMAILJS_SERVICE_ID=your_service_id_here
REACT_APP_EMAILJS_TEMPLATE_ID=your_template_id_here
REACT_APP_EMAILJS_PUBLIC_KEY=your_public_key_here

# API URL (frontend)
REACT_APP_API_URL=http://localhost:4000

# CORS — comma-separated allowed origins (no trailing slashes)
# Production example: ALLOWED_ORIGINS=https://aaronadams.dev,https://www.aaronadams.dev
ALLOWED_ORIGINS=http://localhost:3000

# JWT — must be a strong random secret, never the default
JWT_SECRET=replace_with_a_strong_random_secret

# Database
DB_USER=postgres
DB_HOST=localhost
DB_NAME=portfolio
DB_PASSWORD=postgres
DB_PORT=5432

# Admin seed — remove or leave blank to skip auto-seeding in production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=replace_with_a_strong_password

# Cloudflare Tunnel
TUNNEL_TOKEN=paste_your_token_here
